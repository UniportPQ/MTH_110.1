    "topic": ["Polynomials and Rational Functions"],
    "Question": {
      "content": "The identity for α³ + β³ is ______",
      "type": "subjective",
      "options": []
    },
    "Answer": {
      "type": "string",
      "content": "(α + β)(α² - αβ + β²)"
